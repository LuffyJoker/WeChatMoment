<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp">

        <ImageView
            android:id="@+id/iv_printer_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@mipmap/empty"
            />

        <TextView
            android:id="@+id/tv_on_printer_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_16sp"
            android:textColor="@color/text_nomal_color"
            app:layout_constraintTop_toBottomOf="@+id/iv_printer_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="暂无数据"
            android:layout_marginTop="@dimen/dimen_25"
            />

        <Button
            android:id="@+id/tv_add_printer"
            android:layout_width="@dimen/dimen_163"
            android:layout_height="@dimen/dimen_53"
            android:text="刷新"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/selector_btn_blue_c4"
            android:textSize="@dimen/font_size_21sp"
            android:layout_marginTop="@dimen/dimen_20"
            app:layout_constraintTop_toBottomOf="@+id/tv_on_printer_tips"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>