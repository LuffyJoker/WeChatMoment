<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="240dp"
    android:clipToPadding="false"
    android:scrollY="24dp">

    <ImageView
        android:id="@+id/iv_user_bg"
        android:layout_width="fill_parent"
        android:layout_height="340dp"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/x01" />

    <ImageView
        android:id="@+id/circleprogress"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/progress" />

    <TextView
        android:id="@+id/nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_user_bg"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/user_logo"
        android:paddingTop="40dp"
        android:paddingBottom="15dp"
        android:text="彭启"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/user_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/nick_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        android:src="@mipmap/w002" />

</RelativeLayout>